<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>

            <section class="buscador">
                <%- include('../partials/search.ejs') %>
                    
            </section>

            <main class="main-home">
                
                <section class="main-home-section-index ">
                    <div class="carrito-destinos">
                        <div class=main-home-contenedor-titulo>
                            <h1 class="main-home-titulo">Destinos m√°s buscados</h1>
                        </div>
                        <div id="carrusel-contenido">
                            <div id="carrusel-caja">
                                <% let destacados=destinos.filter(product=> product.status_id == '1') %>
                                    <% destacados.forEach(product=> { %>
                                        <div class="carrusel-elemento">
                                            <article class="article">
                                                <a href="/product/detalle/<%=product.id %> ">
                                                <div class="article-card-top">
                                                    <img class="article-img" src="/img/<%= product.img %>" alt="">
                                                </div>
                                                <div class="article-card-body">
                                                    <h1 class="article-titulo1">
                                                        <%= product.name %>
                                                    </h1>
                        
                                                </div>
                                                </a>
                                            </article>
                                        </div>
                                        <% }) %>
                            </div>
                        </div>
                    </div>
                </section>
                
            </main>
            
            <%- include("../partials/footer.ejs")%>
                <script type="text/javascript">
                    function redirect() {
                        window.location.href = "/product/detalle";
                    }
                </script>
    </body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

        <script src="/js/hamburguesa.js"></script>

</html>