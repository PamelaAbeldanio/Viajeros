<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs") %>

    <body>
        <%- include("../partials/header.ejs") %>

            <section class="buscador">
                <%- include('../partials/search.ejs') %>
                    
                    <img class="imgpbanner" src="img/bannerhome.jpg" alt="">
            </section>

            <main class="main-home">
                <div class="main-home-contenedor-titulo">
                    <h1 class="main-home-titulo">Nuestros viajes destacados</h1>
                </div>
                <h2 class="main-home-subtitulo">¡No pierdas tiempo y miralos tu mismo!</h2>
                <div class="main-home-contendor-icono">
                    <i class="fas fa-angle-down main-home-icono"></i>
                </div>
                <section class="main-home-section ">
                    <div class="carrito-destinos">
                        <div class=main-home-contenedor-titulo>
                            <h1 class="main-home-titulo">Destinos más buscados</h1>
                        </div>
                        <div id="carrusel-contenido">
                            <div id="carrusel-caja">
                                <% let destacados=destinos.filter(product=> product.status_id == '1') %>
                                    <% destacados.forEach(product=> { %>
                                        <div class="carrusel-elemento">
                                            <article class="article">
                                                <div class="article-card-top">
                                                    <img class="article-img" src="/img/<%= product.img %>" alt="">
                                                </div>
                                                <div class="article-card-body">
                                                    <h1 class="article-titulo">
                                                        <%= product.name %>
                                                    </h1>
                                                    <p class="article-parrafo cut-text">
                                                        <%= product.detail %>
                                                    </p>
                                                    <p class="article-precio">$<%=product.price %>
                                                    </p>
                                                    <div class="contenedor-btn">
                                                        <a href="/product/detalle/<%=product.id %> "> <button
                                                                class="article-btn">Saber
                                                                más</button> </a>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                        <% }) %>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="marcas">
                    <h2 class="marcaswork">Marcas con las que trabajamos</h2>
                    <div class="infomarcas">
                        <div class="infomarcas-img">
                            <img class="marcas-img" src="img/marcas1.png" alt="">
                            <img class="marcas-img" src="img/marcas2.png" alt="">
                            <img class="marcas-img" src="img/marcas3.png" alt="">
                        </div>
                    </div>
                </section>
                <div class="main-home-contenedor-titulo">
                    <h1 class="main-home-titulo">¡Ofertas imperdibles!</h1>
                </div>
                <h2 class="main-home-subtitulo">¡Hasta 12 cuotas sin interés con tarjetas seleccionadas!</h2>
                <div class="main-home-contendor-icono-tarjeta">
                    <i class="fab fa-cc-mastercard main-home-icono"></i>
                    <i class="fab fa-cc-visa main-home-icono"></i>
                </div>
                <div class="main-home-contendor-icono">
                    <i class="fas fa-angle-down main-home-icono"></i>

                </div>
                <section class="main-home-section ">
                    <div class="carrito-destinos">
                        <div class=main-home-contenedor-titulo>
                        </div>
                        <div id="carrusel-contenido">
                            <div id="carrusel-caja">
                                <% let oferta=destinos.filter(product=> product.status_id == '2') %>
                                    <% oferta.forEach(product=> { %>
                                        <div class="carrusel-elemento">
                                            <article class="article">
                                                <div class="article-card-top">
                                                    <img class="article-img" src="/img/<%= product.img %>" alt="">
                                                </div>
                                                <div class="article-card-body">
                                                    <h1 class="article-titulo">
                                                        <%= product.name %>
                                                    </h1>
                                                    <p class="article-parrafo cut-text">
                                                        <%= product.detail %>
                                                    </p>
                                                    <p class="article-precio">$<%=product.price %>
                                                    </p>
                                                    <div class="contenedor-btn">
                                                        <a href="/product/detalle/<%=product.id %> "> <button
                                                                class="article-btn">Saber
                                                                más</button> </a>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                        <% }) %>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
            <div class="contenedor-whatsapp">
                <a href="/contact"><i class="fab fa-whatsapp whatsapp"></i></a></i>
            </div>
            <%- include("../partials/footer.ejs")%>
                <script type="text/javascript">
                    function redirect() {
                        window.location.href = "/product/detalle";
                    }
                </script>
    </body>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

        <script src="/js/hamburguesa.js"></script>

</html>